{
    "compilerOptions": {
        "checkJs": true,
        "allowJs": true,
        "strict": true,
        "declaration": true,
        "target": "es2022",
        "module": "es2022",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false
    },
    "include": [
        "*.js",
        "*.ts",
        "*.d.ts",
        "lib/JSON5.js",
        "lib/chart-theme.js"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}